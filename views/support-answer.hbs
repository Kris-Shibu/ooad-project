<br>

<div class="container mt-5">
		<h1>Support Response</h1>
		<form method="POST">
			<div class="form-group">
				<label for="complaintID">Complaint ID:</label>
				<input type="text" class="form-control" id="emailID" placeholder="Enter complaint ID" required name="complaintID">
			</div>
			<div class="form-group">
				<label for="response">Response:</label>
				<input type="text" class="form-control" id="response" placeholder="Response" required name="response">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>


