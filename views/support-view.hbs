<!DOCTYPE html>
<html>
<head>
	<title>Resolve My Complaint</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body>
	<script>
function redirectToPage() {
  window.location.href = "/support-answer";
}
</script>
	<nav class="navbar navbar-expand-md bg-dark navbar-dark">
		<a class="navbar-brand" href="index">Resolve My Complaint</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarResponsive">
			<ul class="navbar-nav ml-auto">
                <li class="nav-item ">
					<a class="nav-link" href="support-dashboard">Dashboard</a>
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="support-view">View  complaints</a>
				</li>
			</ul>
		</div>
	</nav>
    <br>
    <div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Type</th>
		<th>Description</th>
		<th>Author</th>
		<th>Response</th>
		<th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <td>{{this.complaintID}}</td>
          <td>{{this.complaintTitle}}</td>
          <td>{{this.complaintType}}</td>
		  <td>{{this.description}}</td>
		  <td>{{this.complaintAuthor}}</td>
		  <td>{{this.response}}</td>
		  <td><button type="button" class="btn btn-info" onclick="redirectToPage()">Respond</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
